<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.todoapp.activities.MainActivity">

    <!-- Editext for Search -->
    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_font_size"
        android:paddingTop="@dimen/search_bar_padding"
        android:paddingBottom="@dimen/search_bar_padding"
        android:layout_centerVertical="true"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Search Todo..."
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/divider_shape"
        android:inputType="textVisiblePassword"/>

    <ListView
        android:layout_width="@dimen/listview_layout_width"
        android:layout_height="match_parent"
        android:divider="@color/listview_divider"
        android:dividerHeight="@dimen/listview_divider_height"
        tools:layout_editor_absoluteY="@dimen/layout_editor_absolute"
        tools:layout_editor_absoluteX="@dimen/layout_editor_absolute"
        android:transcriptMode="normal"
        android:layout_below="@+id/inputSearch"
        android:id="@+id/lvItems"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
